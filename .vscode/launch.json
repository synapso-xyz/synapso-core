    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pytest with Coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov=src/synapso", // Replace "areq" with your actual module name if different
                "--cov-report=term-missing",
                "${workspaceFolder}/tests"
            ],
            "console": "integratedTerminal",
        }
    ]
}